{
  "extends": [
    "config:base",
    "group:allNonMajor",
    "schedule:weekends",
    ":automergePatch"
  ],
  "ignorePresets": [":prHourlyLimit2"],
  "rangeStrategy": "update-lockfile",
  "lockFileMaintenance": {
    "enabled": true
  },
  "composer": {
    "enabled": false
  },
  "poetry": {
    "enabled": false
  },
  "packageRules": [
    {
      "matchPackageNames": ["find-cache-dir"],
      "allowedVersions": "<4"
    },
    {
      "matchPackageNames": ["pdfjs-dist"],
      "allowedVersions": "<3"
    },
    {
      "matchPackageNames": ["@open-wc/scoped-elements"],
      "allowedVersions": "<3"
    },
    {
      "matchPackageNames": ["rollup-plugin-serve"],
      "allowedVersions": "<3"
    },
    {
      "matchPackageNames": ["eslint"],
      "allowedVersions": "<9"
    }
  ]
}
